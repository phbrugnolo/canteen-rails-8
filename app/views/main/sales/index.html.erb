<p style="color: green"><%= notice %></p>
<h1 class="mx-2 mt-2"><%= I18n.t(:sale, scope: %i[activerecord models], count: 2) %></h1>
<hr>
<div id="sales">
  <div class="card p-2 mt-4" style="background-color: #EEF5FF">
    <div class="container">
      <% if @sales.size > 0 %>
        <div class="row">
          <% @sales.order(created_at: :desc).each do |sale| %>
            <div class="col-6">
              <div class="card border-info m-4 p-2" style="position: relative;">
                <table class="table mb-0 mt-1">
                  <tr class="list-group list-group-flush table-row">
                    <td><%= I18n.t(:date) %>: <%= sale.created_at.strftime("%d/%m/%Y") %></td>
                    <td><%= I18n.t(:customer, scope: %i[activerecord models], count: 1) %>: <%= sale.customer.name %></td>
                    <td><%= I18n.t(:total_price) %>: R$<%= number_with_precision(sale.total_price, precision: 2) %></td>
                    <td class="border-bottom-0 d-flex justify-content-end flex-column">
                      <%= link_to I18n.t(:show_sale), main_sale_path(sale), class: "btn btn-primary show-cart my-2" %>
                    </td>
                  </tr>
                </table>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
